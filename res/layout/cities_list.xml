<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <ListView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/citiesListView" android:layout_gravity="center" android:layout_weight="1"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Add new city"
            android:id="@+id/cityAddButton" android:layout_gravity="center" android:textSize="20dp"
            android:onClick="addCityClicked"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:id="@+id/updateButton" android:layout_gravity="center" android:onClick="updateClicked"/>
</LinearLayout>

